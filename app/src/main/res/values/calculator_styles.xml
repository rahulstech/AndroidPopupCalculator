<?xml version="1.0" encoding="utf-8"?>
<resources>



    <dimen name="calculator_button_height">36dp</dimen>

    <dimen name="calculator_button_text_size">12sp</dimen>

    <dimen name="calculator_button_gap">12dp</dimen>

    <dimen name="calculator_button_stroke_width">1dp</dimen>

    <color name="calculator_keyboard_background_color">#F5F5F5</color>

    <color name="calculator_button_color">#0288D1</color>

    <color name="calculator_clear_button_color">#E64A19</color>

    <color name="calculator_button_text_color">#FFFFFF</color>

    <color name="calculator_button_ripple_color">#9581D4FA</color>

    <color name="calculator_clear_button_ripple_color">#95FFCC80</color>

    <color name="calculator_numeric_button_color">#FFFFFF</color>

    <color name="calculator_numeric_button_text_color">#000000</color>

    <color name="calculator_button_stroke_color">@color/calculator_button_color</color>

    <string name="calculator_button_description_backspace">backspace</string>

    <string name="calculator_button_description_clear">clear</string>

    <style name="calculator_button_shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="calculator_button_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/calculator_button_color</item>
        <item name="rippleColor">@color/calculator_button_ripple_color</item>
        <item name="shapeAppearance">@style/calculator_button_shape</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:textColor">@color/calculator_button_text_color</item>
        <item name="android:layout_marginEnd">@dimen/calculator_button_gap</item>
        <item name="android:layout_marginStart">@dimen/calculator_button_gap</item>
    </style>

    <style name="calculator_clear_button_style" parent="calculator_button_style">
        <item name="backgroundTint">@color/calculator_clear_button_color</item>
        <item name="rippleColor">@color/calculator_clear_button_ripple_color</item>
    </style>

    <style name="calculator_numeric_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/calculator_numeric_button_color</item>
        <item name="rippleColor">@color/calculator_button_ripple_color</item>
        <item name="strokeWidth">@dimen/calculator_button_stroke_width</item>
        <item name="strokeColor">@color/calculator_button_stroke_color</item>
        <item name="shapeAppearance">@style/calculator_button_shape</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:textColor">@color/calculator_numeric_button_text_color</item>
        <item name="android:layout_marginEnd">@dimen/calculator_button_gap</item>
        <item name="android:layout_marginStart">@dimen/calculator_button_gap</item>
    </style>

    <style name="calculator_equation_preview_text_appearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>